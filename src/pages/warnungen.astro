---
import "../styles/warnungen.css";

import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const title = "Wetterwarnungen für Deutschland - wetterkarte.org";
const description =
	"Aktuelle Wetterwarnungen für Deutschland. Erhalten Sie präzise, aktuelle Warnungen und Wettervorhersagen direkt vom Deutschen Wetterdienst (DWD).";
---

<Layout title={title} description={description}>
	<Header currentPath="/warnungen/" />
	<main>
		<section class="content-section">

			<article>
				<header>
					<h1>Aktuelle Wetterwarnungen</h1>
					<p>Klicken Sie auf eine Warnung, um mehr Informationen zu erhalten.</p>
				</header>
				<div id="map"></div>
			</article>
			<article id="warnings"></article>
			<article>
				<p class="update-info" id="update-info">&nbsp;</p>
			</article>
		</section>
	</main>
	<script src="../scripts/weather/warnungen.ts"></script>

	<Footer />
</Layout>

<style>
	#map {
		height: 80vh;
		border-radius: 9px;
		margin-bottom: 3rem;
	}

	.content-section {
		padding: 2rem 1.5rem;
		max-width: 900px;
		margin: 0 auto;
	}

	.content-section h1 {
		font-size: 2rem;
		margin-bottom: 1rem;
		font-weight: 700;
	}

	.content-section p {
		margin-bottom: 1rem;
		line-height: 1.8;
	}

	.content-section li {
		margin-left: 2rem;
	}
</style>
