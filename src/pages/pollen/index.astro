---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import CityIndex from "../../components/CityIndex.astro";

const title = `Pollenflug in Deutschland - Aktuelle Pollenbelastung`;
const description = `Aktueller Pollenflug in Deutschland: Erfahren Sie die tägliche Pollenbelastung und Prognosen für Erle, Birke, Gräser, Beifuß, Olive und Ambrosia in Ihrer Region`;


---

<Layout title={title} description={description}>
    <Header currentPath="/pollen/"/>
    <main>
        <section class="content-section">
            <article>
                <header class="index-header">
                    <h1>Pollenflug in Deutschland</h1>
                    <p>Wählen Sie Ihre Region:</p>
                </header>
                <CityIndex prefix="pollen"/>
            </article>
        </section>
    </main>
    <Footer />
</Layout>

<style>
    .content-section {
        padding: 2rem 1.5rem;
        max-width: 900px;
        margin: 0 auto;
    }
    .index-header h1 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .index-header p {
        font-size: 1rem;
        margin-bottom: 1rem;
        color: #555;
    }

   
</style>
