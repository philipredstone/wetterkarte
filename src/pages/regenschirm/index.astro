---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import CityIndex from "../../components/CityIndex.astro";

const title = "Brauche ich einen Regenschirm? - Deutschland";
const description =
  "Schnelle Antwort: Brauchen Sie heute einen Regenschirm? Aktuelle Regenvorhersage und praktische Empfehlungen für Ihre Region.";
---

<Layout title={title} description={description}>
  <Header currentPath="/regenschirm/" />
  <main>
    <section class="content-section">
      <article>
        <header class="index-header">
          <h1>Brauche ich einen Regenschirm?</h1>
          <p>
            Wählen Sie Ihre Stadt und erfahren Sie sofort, ob Sie heute einen
            Regenschirm benötigen:
          </p>
        </header>
        <CityIndex prefix="regenschirm" />
      </article>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .content-section {
    padding: 2rem 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }
  .index-header h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .index-header p {
    font-size: 1rem;
    margin-bottom: 1rem;
    color: #555;
  }
</style>
