---
// WeatherHero.astro
interface Props {
    imageUrl?: string;
}

const { imageUrl = "wetterkarte-hero.webp" } = Astro.props;
---

<div class="weather-hero-wrapper">
    <div class="weather-hero-container">
        <div class="weather-hero-text">
            <h2>Aktuelle Wettervorhersage f√ºr Deutschland</h2>
            <p>
                Pr√§zise Temperatur-, Regen- und Windvorhersagen f√ºr die n√§chsten 48 Stunden einfach und intuitiv zu verfolgen mit unserer interaktiven Wetterkarte.
            </p>
            <div class="weather-hero-cta">
                <a href="/karte/" class="weather-cta-primary">
                    <span class="cta-icon">üó∫Ô∏è</span>
                    <span>Interaktive Wetterkarte √∂ffnen</span>
                </a>
                <a href="/radar/" class="weather-cta-secondary">
                    <span class="cta-icon">üåßÔ∏è</span>
                    <span>Zum Regenradar</span>
                </a>
            </div>
        </div>
        <a class="weather-hero-image" href="/karte/">
