---
interface Question {
  question: string;
  answer: string;
}

interface Props {
  questions: Question[];
  header?: boolean;
}

const { questions, header = true} = Astro.props;

const stripHtml = (html: string): string =>
  html.replace(/<\/?[^>]+(>|$)/g, '');

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": questions.map((q) => ({
    "@type": "Question",
    "name": stripHtml(q.question),
    "acceptedAnswer": {
      "@type": "Answer",
      "text": stripHtml(q.answer)
    },
  })),
};
---
