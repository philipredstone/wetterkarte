<br />
<section class="faq">
  {questions.map((question) => (
    <div class="faq-item">
      <h3 set:html={question.question}></h3>
      <p set:html={question.answer}></p>
    </div>
  ))}
</section>

<script type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script>
