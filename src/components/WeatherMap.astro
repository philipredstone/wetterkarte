---
// WeatherMap.astro

interface Props {
  layerselect: boolean;
  layer: string;
  center: [number, number];
  zoom?: number;
  type?: "widget" | "fullscreen" | "borderless";
  marker?: boolean;
}

let { layerselect, layer, center, zoom, type, marker = false } = Astro.props;

if (!center) {
  center = [52.52, 13.41];
}

if (!zoom) {
  zoom = 8;
}

let borderRadius = type === "borderless" ? "0" : "8";
---

<div
  class="map-container"
  id="map-container"
  data-layer={layer}
  data-lat={center[0]}
  data-lng={center[1]}
  data-zoom={zoom}
  data-marker={marker}
  data-layerselect={layerselect}
>
  <div class=`map-wrapper ${type}`>
    <div id="map" role="application" aria-label="Wetterkarte"></div>
    <div id="map-overlay" class="map-overlay" onclick="this.remove()">
      <span class="overlay-text">Zum Interagieren mit der Karte klicken</span>
    </div>
  </div>
</div>

<script src="../scripts/MapScript.ts"></script>

<style>
  .map-container {
    height: 80vh;
    width: 100%;
    background: #fff;
    position: relative;
  }

  .map-wrapper {
    position: relative;
    height: 100%;
    width: 100%;
  }

  @media (min-width: 768px) {
    .fullscreen {
      height: 100%;
      width: 80vw !important;
      margin-left: 10vw;
      border-radius: 8px;
      margin-top: 1rem;
    }

    .fullscreen #map {
      height: 100%;
      width: 80vw;
    }

    .fullscreen #map-overlay {
      width: 80vw;
    }

    #map {
      position: relative;
      z-index: 1;
    }
  }

  @media (max-width: 768px) {
    .map-container {
      height: 60vh;
    }

    #map {
      height: 100%;
      width: 100%;
      position: relative;
      z-index: 1;
    }
  }

  .map-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1100;
    cursor: pointer;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .map-wrapper {
    position: relative;
    height: 100%;
    width: 100%;
    overflow: hidden;
  }

  .map-wrapper:hover .map-overlay {
    opacity: 1;
  }

  @media (hover: none) {
    .map-overlay {
      opacity: 1;
    }
  }

  .overlay-text {
    font-size: 20px;
    color: white;
    padding: 8px 16px;
    border-radius: 4px;
  }

  /* Styles for Leaflet controls */
  :global(.leaflet-control-zoom) {
    border: none !important;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15) !important;
  }

  :global(.leaflet-control-zoom-in),
  :global(.leaflet-control-zoom-out) {
    background: white !important;
    border: none !important;
    color: black !important;
    width: 30px !important;
    height: 30px !important;
    line-height: 30px !important;
    font-size: 16px !important;
  }

  :global(.leaflet-control-zoom-in:hover),
  :global(.leaflet-control-zoom-out:hover) {
    background: #f0f0f0 !important;
    color: black !important;
  }

  :global(.leaflet-control-attribution) {
    font-size: 11px !important;
  }

  :global(.leaflet-div-icon) {
    background: unset !important;
    border: unset !important;
  }

  :global(.leaflet-fullscreen-icon) {
    background-image: url("/icon-fullscreen.svg");
    background-size: 26px 52px;
  }

  :global(.leaflet-fullscreen-icon.leaflet-fullscreen-on) {
    background-position: 0 -26px;
  }

  :global(.leaflet-touch .leaflet-fullscreen-icon) {
    background-position: 2px 2px;
  }

  :global(.leaflet-touch .leaflet-fullscreen-icon.leaflet-fullscreen-on) {
    background-position: 2px -24px;
  }

  /* Safari still needs this vendor-prefix: https://caniuse.com/mdn-css_selectors_fullscreen */
  /* stylelint-disable-next-line selector-no-vendor-prefix */
  :global(.leaflet-container:-webkit-full-screen),
  :global(.leaflet-container:fullscreen) {
    width: 100% !important;
    height: 100% !important;
    z-index: 99999;
  }

  :global(.leaflet-pseudo-fullscreen) {
    position: fixed !important;
    width: 100% !important;
    height: 100% !important;
    top: 0 !important;
    left: 0 !important;
    z-index: 99999;
  }
</style>
